<script>
    $(document).ready(function() {
        // Initialize counters
        $('.counter').each(function() {
            var $this = $(this);
            var countTo = $this.text();
            
            $({ countNum: 0 }).animate({
                countNum: countTo
            }, {
                duration: 1000,
                easing: 'swing',
                step: function() {
                    $this.text(Math.floor(this.countNum));
                },
                complete: function() {
                    $this.text(this.countNum);
                }
            });
        });

        // Update time
        function updateTime() {
            var now = new Date();
            var timeString = now.toLocaleTimeString();
            $('.update-time').text(timeString);
        }
        
        updateTime();
        setInterval(updateTime, 1000);

        // Optionally, you can add AJAX call to get real-time data
        function updateCounts() {
            $.ajax({
                url: '/api/dashboard-counts', // Your API endpoint
                method: 'GET',
                success: function(response) {
                    // Update counts with real data if available
                    if(response.scheduledCount) $('#lblScheduledMemberCount').text(response.scheduledCount);
                    if(response.onlineCount) $('#lblMemberCount').text(response.onlineCount);
                    if(response.modelCount) $('#lblActiveMemberCount').text(response.modelCount);
                    if(response.newAgentCount) $('#lblPendingMemberCount').text(response.newAgentCount);
                }
            });
        }

    });
</script>